<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    tools:context=".onboarding.SkillFragment">

    <TextView
        android:id="@+id/textViewTitle"
        style="@style/OnboardingTitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What is your cooking skill level?"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/radioGroupSkill"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/textViewTitle">

        <RadioButton
            android:id="@+id/radioSkillLow"
            style="@style/OnboardingRadioButtonCard"
            android:lineSpacingExtra="4dp"
            android:text="Low\nI microwave burritos" />

        <RadioButton
            android:id="@+id/radioSkillMiddle"
            style="@style/OnboardingRadioButtonCard"
            android:lineSpacingExtra="4dp"
            android:text="Middle\nI'm quite confident cooking easy food" />

        <RadioButton
            android:id="@+id/radioSkillHigh"
            style="@style/OnboardingRadioButtonCard"
            android:lineSpacingExtra="4dp"
            android:text="High\nI like experimenting and getting creative" />
    </RadioGroup>

    <Button
        android:id="@+id/buttonNext"
        style="@style/OnboardingNextButton"
        android:text="Next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>