<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.RecipieTracker" parent="Theme.Material3.DayNight.NoActionBar">    </style>

    <style name="Theme.RecipieTracker" parent="Base.Theme.RecipieTracker" />

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@android:color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/foodware</item>

        <item name="postSplashScreenTheme">@style/Theme.RecipieTracker</item>
    </style>

    <style name="OnboardingNextButton" parent="Widget.Material3.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:backgroundTint">#D6C9FF</item>
        <item name="android:textColor">#3F2D7D</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="OnboardingTitleText" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#2C1D5D</item>
    </style>

    <style name="OnboardingRadioButtonCard" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/selectable_card_background</item>
        <item name="android:button">@null</item> <item name="android:padding">20dp</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#2C1D5D</item>
    </style>
</resources>